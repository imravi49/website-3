
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public inquiries: allow anyone to create, but not list or get
    match /inquiries/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    // Site content: only allow the admin (by email) to read/write
    match /site/content {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'ravi.rv73838@gmail.com';
    }
    // Other collections: deny by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
